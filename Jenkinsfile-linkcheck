pipeline {
    agent {
        dockerfile {
            label 'docker'
            filename 'linkcheck-docker.nix'
        }
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage ('Check links') {
            steps {
                sh """
                tmp_venv="\$(mktemp -d)"
                virtualenv "\$tmp_venv"
                source "\$tmp_venv"/bin/activate
                pip install -r requirements.txt
                make linkcheck
                """
            }
        }
    }
    post {
        failure {
            archiveArtifacts '_build/linkcheck/en/output.txt'
        }
    }
}
